<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/color_wabdoujia_actionbar_color">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/homeBtn"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@color/color_wandoujia_home_color"
        android:gravity="center"
        android:layout_marginLeft="0dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_wandoujia_home_color"
            android:src="@drawable/ic_home_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/actionBtns"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/apk_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_apk_normal"/>
        <ImageView
            android:id="@+id/gameBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_game_normal"/>
        <ImageView
            android:id="@+id/videoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_video_normal"/>
        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_more_down"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/actionMsg"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_search"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:background="@color/color_wandoujia_mes_color"
                />
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>


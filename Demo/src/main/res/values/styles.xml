<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="listItemText">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>
    <style name="contactItemName">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>
    <style name="contactItemTel">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="dialogContactText">
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="list_item_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="list_item_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_edit_selector</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_item_name" parent="list_item_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">84dp</item>
    </style>

    <style name="list_item_value">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="custom_actionbar">
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="custom_actionbar_layout" parent="custom_actionbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="T54_7">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_color_7</item>
    </style>

    <style name="confirm_btn" parent="T42_FF">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@drawable/confirm_btn_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="T42_FF">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="custom_actionbar_back" parent="custom_actionbar">
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/main_item_selector</item>
    </style>

    <style name="main_form_line">
        <item name="android:background">#e3e3e3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>

    </style>
</resources>
